<%= form_with(model: content, local: true) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :content_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :content_description %>
  </div>

  <div class="field">
    <%= form.label :views %>
    <%= form.number_field :views, id: :content_views %>
  </div>

  <div class="field">
    <%= form.label :downloads %>
    <%= form.number_field :downloads, id: :content_downloads %>
  </div>

  <div class="field">
    <%= form.label :is_public %>
    <%= form.check_box :is_public, id: :content_is_public %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
